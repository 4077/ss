<div class="{__NODE_ID__}" instance="{__INSTANCE__}">

    <div class="enable_modes">
        {ENABLED_BUTTON}
        {PUBLISHED_BUTTON}
    </div>

    <div class="fields df">
        <div class="fdc fg1">
            <div class="field fdc">
                <div class="label">Картинки</div>
                <div class="control">
                    <div class="images">
                        {IMAGES}
                    </div>
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Короткое название</div>
                <div class="control">
                    <input type="text" field="short_name" value="{SHORT_NAME}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Название</div>
                <div class="control">
                    <input type="text" field="name" value="{NAME}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Описание</div>
                <div class="control">
                    <input type="text" class="cat_field" field="description" value="{DESCRIPTION}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Алиас</div>
                <div class="control">
                    <input type="text" field="alias" value="{ALIAS}">
                </div>
            </div>

            <div class="field fdc">
                <div class="route_cache">
                    <a href="{URL}" target="_blank">{ROUTE_CACHE}</a>
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Title</div>
                <div class="control">
                    <input type="text" field="meta_title" value="{META_TITLE}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Keywords</div>
                <div class="control">
                    <input type="text" field="meta_keywords" value="{META_KEYWORDS}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Description</div>
                <div class="control">
                    <input type="text" field="meta_description" value="{META_DESCRIPTION}">
                </div>
            </div>
        </div>
    </div>

</div>
