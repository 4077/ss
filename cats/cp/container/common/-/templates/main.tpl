<div class="{__NODE_ID__}" instance="{__INSTANCE__}">

    <div class="enable_modes">
        {ENABLED_BUTTON}
        {PUBLISHED_BUTTON}
        {OUTPUT_BUTTON}
    </div>

    <div class="fields df">
        <div class="fdc fg1">
            <div class="field fdc">
                <div class="label">Короткое название</div>
                <div class="control">
                    <input type="text" class="cat_field" field="short_name" value="{SHORT_NAME}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Название</div>
                <div class="control">
                    <input type="text" class="cat_field" field="name" value="{NAME}">
                </div>
            </div>

            <div class="field fdc">
                <div class="label">Описание</div>
                <div class="control">
                    <input type="text" class="cat_field" field="description" value="{DESCRIPTION}">
                </div>
            </div>

            <div class="cp">
                {CP}
            </div>
        </div>
    </div>

    <div class="components_cps">
        <!-- component_cp -->
        <div class="component_cp">
            {CONTENT}
        </div>
        <!-- / -->
    </div>

</div>
